@model IEnumerable<ChessShop.Models.Category>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body p-0">
				<div class="table-responsive active-projects style-1">
					<div class="tbl-caption">
						<h4 class="heading mb-0">@ViewData["TableTitle"]</h4>
						<div>
							<a class="btn btn-primary btn-sm" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">+ Add Category</a>
							@*<button type="button" class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal1">
								+ Invite Employee
							</button>*@
						</div>
					</div>
					@if (Model.Count() > 0)
					{
						<table id="empoloyees-tblwrapper" class="table table-hover">
							<thead>
								<tr>
									<th>Name</th>
									<th>Order Number</th>
									<th>Code</th>
									<th>Created Time</th>
									<th>Edited By</th>
									<th>Last Modified</th>
									<th>In Use</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var obj in Model)
								{
									<tr>
										<td>@obj.name</td>
										<td>@obj.displayorder</td>
										<td>@obj.code</td>
										<td>@obj.createdtime</td>
										<td>@obj.lastusername</td>
										<td>@obj.modifiedtime</td>
										<td>@obj.inuse</td>
										<td>
											<div class="d-flex">
												<a href="#" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fa fa-pencil"></i></a>
												<a href="#" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
											</div>
										</td>
									</tr>
								}
							</tbody>
						</table>
					}
					else
					{
						<h4 class="heading mb-0">No @ViewData["TableTitle"]</h4>
					}
				</div>
			</div>
		</div>
	</div>
</div>



